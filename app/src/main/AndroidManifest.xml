<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="chatty.myself.res_waiterv001" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:label="Chatty"
        android:theme="@style/MyMaterialTheme" >
        <activity
            android:name=".MainActivity_"
            android:icon="@drawable/waiter"
            android:label="Waiter"
            android:screenOrientation="landscape" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TableViewActivity_"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".LoginPageActivity_"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".SignInPageActivity_"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".LoadingPageActivity_"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".HomePageActivity_"
            android:label="@string/title_activity_home_page"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".FoodItemPageActivity_"
            android:label="@string/title_activity_food_item"
            android:screenOrientation="landscape" >

        </activity>
        <activity
            android:name=".OrderListActivity_"
            android:label="@string/title_activity_food_item"
            android:screenOrientation="landscape" >

        </activity>


        <service android:name=".utill.ChatHeadService" >
        </service>
    </application>

</manifest>
